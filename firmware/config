ForceValue1=0
ForceADC2=10000
ForceValue2=100

#two calibrations points between ADC values and pressure in kPa
PressADC1=100
PressValue1=0.1
PressADC2=1000
PressValue2=100.0

#two calibrations points between ADC values and temperature in Â°C
TempADC1=100
TempValue1=0.1
TempADC2=1000
TempValue2=100.0

#AD7794 ADC channel configuration
